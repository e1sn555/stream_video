<ul class='breadcrumb'>
  <li class='breadcrumb-item'><a href='/'>Ana səhifə</a></li>
  <li class='breadcrumb-item'><a href='/videos'>Videolar</a></li>
  <li class='breadcrumb-item'><span>{{link}}</span></li>
</ul>
<div class='row mt-4'>
  <div class='col-md-10 mx-auto'>
    <h4>
      {{link}}
      Video dəyişdir
    </h4>
  </div>
  <div class='col-md-10 mt-4 mx-auto'>
    <form action='/videos' method='post' enctype='multipart/form-data'>
      <div class='form-group'>
        <label for='video'>Fayl</label>
        <input
          id='video'
          name='video'
          type='file'
          class='form-control'
          {{! accept='video/*' }}
          required
        />
      </div>
      <div class='form-group'>
        <label for='branches'>Filiallar</label>
        <select multiple name='branches[]' id='branches' class='form-control'>
          {{#each branches}}
            <option value='{{id}}' selected>{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class='form-group d-flex'>
        <button class='btn btn-success'>Yadda saxla</button>
        <a href='/videos' class='btn btn-secondary ml-2'>Geri</a>
      </div>
    </form>
  </div>
</div>